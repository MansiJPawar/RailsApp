<!-- #basic user info -->
<div class="container">
  <div class="row">
    <div class="col-4">
     <!-- profile image -->
     <%= profile_picture @account, 200 %>
    </div> 
    <div class="col-8 text-left">
     <div class="row">
       <div class="col-6">
          <!-- link to edit profile , if can_edit_profile? only the logged in user can edit his own profile|| custom bootstrap style-->
          <%= link_to 'Edit Profile',edit_account_registration_path, class: "btn btn-muted btn-custom float-right" if can_edit_profile?(@account.id) %>
          <h1><%= current_account.full_name %></h1>
       </div>
     </div>
      <!-- count values of post followers/following -->
      <div class="row profile-stats">
        <div class="col-4">
          <%= current_account.posts.count %>Posts
        </div>
        <div class="col-4">
          <%= current_account.total_followers %>Followers
        </div>
        <div class="col-4">
          <%= current_account.following %>Following
        </div>
      </div>
      
      <!-- insta profile bio -->
      <p><%= @account.full_name %></p>
      <!-- simple_format for multiline -->
      <p><%= simple_format @account.description %></p>
      <p><%= link_to @account.website if @account.website.present? %></p>
    </div>
  </div>
    <!-- layout for post on profile  -->
    <div class="row profile-posts">
      <% @posts.each do |post| %>
        <!-- loop posts -->
        <div class="col-4">
          <div class="insta-post post-square" style="background-color: url(<%= post.image.url %>) no-repeat center top">
            <!-- every post on myprofile redirects to show page of post with comment -->
            <%= link_to post_path(post) do %> 
            <div class="post-stats">
              <div class="inner">
                <i class="fa fa-heart"></i><%= post.total_likes_count %> 
                <i class="fa fa-comment m-1-15"></i><%= post.total_comments_count %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>