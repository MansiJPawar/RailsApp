<div class="container">
  <div class="row">
    <div class="col-8">
      <!-- loop posts -->
      <% @posts.each do |post| %>
        <div class="insta-post">
          <div class="post-meta">
            <%= link_to image_tag(post.account.image.thumb.url, class:"img-circle"), profile_path(post.account.username) %>
            <!-- link to username redirect to user profile -->
            <%= link_to post.account.username, profile_path(post.account.username), class:"text-dark" %>
          </div>
          <%= image_tag post.image.url, class: "img img-fluid" %>
       
          <div class="post-details">
            <!-- to hold like and comment buttons -->
            <div class="post-actions">
              <i class="fa fa-heart like-<%= post.id %><%= 'active' if post_liked_by_user?(post.id) %> fa-2x post-like" data-id="<%= post.id %>"></i>
              <i class="fa fa-comment fa-2x post-comment"></i>
            </div>
            
            <p><strong id="post-<%= post.id %>-likes"><%= post.total_likes_count %>Likes</strong></p>
            <p><strong id="post-<%= post.id %>-comments"><%= link_to post.account.username, profile_path(post.account.username), class:"text-dark" %><%= simple_format post.description %></strong>
            
            <%= simple_format post.description %>
            <p class="text-muted"><%= time_ago_in_words post.created_at %> ago</p>
            <!-- comments partial || locals pass post as var -->
            <%= render "posts/comments" , post: post %>
          </div>
          
          <!-- comment section field to post -->
          <div class="comment-box">
            <%= form_for @comment do |f| %>
              <%= f.hidden_field :post_id, value: post.id %>
              <!-- allow user to enter comment -->
              <%= f.text_field :comment, placeholder:"Add comment here...", class:"form-control post-comment" %>
              <%= f.submit "Post", class: "btn btn-success float-right" %>
            
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-4">
      <div class="account-summary">        
        <p>
          <!-- add profile image and username to right section of profile dashboard -->
          <%= link_to image_tag(current_account.image.thumb.url, class:"img-circle"), profile_path(current_account.username) if current_account.image.present? %>
          <strong><%= current_account.username %></strong><br/>
        </p>
          <!-- full_name created method in model account.rb -->
        <p>
        <%= current_account.full_name %>
        </p>
      </div>
      <div class="follower-suggestions">
        <%= link_to 'View All','#',class:"float-right text-dark" %>
        <p class="text-muted">Suggestions for you</p>
        <%= render "accounts/follower_suggestions" %>
      </div>
    </div>
  </div>
</div>