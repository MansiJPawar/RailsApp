<!-- comment instance via include method  -->
<% comments.each do |comment| %>
 <div class="comment">
   <!-- profile pic to each comment -->
   <%= link_to profile_picture(comment.account), profile_path(comment.account.username)%>
   <!-- display username of account  -->
   <strong><%= link_to comment.account.username, profile_path(comment.account.username), class:"text-dark" %></strong>
   <%= comment.comment %>
   <p class="text-muted m-l-30"><%= time_ago_in_words comment.created_at %> ago</p>
 </div>
<% end %>