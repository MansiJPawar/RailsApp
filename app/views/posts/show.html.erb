<div class="container post-details">
  <div class="row post-show" >
    <div class="col-8">
      <div class="insta-post">
        <!-- check if image is set before we call  -->
        <%= image_tag @post.image.url, class: "img img-fluid" if @post.image.present? %>
      </div>
      </div>
      <div class="col-4 ">
        <div class="details">
          <div class="post-meta">
            <%= link_to image_tag(@post.account.image.thumb.url, class:"img-circle"), profile_path(@post.account.username) %>
            <!-- link to username redirect to user profile -->
            <%= link_to @post.account.username, profile_path(@post.account.username), class:"text-dark" %>
        </div>
                
        <div class="post-details">    
          <div class="comments-feed">
            <%= simple_format @post.description %>    
            <!-- comments partial || locals pass post as var -->
            <%= render "posts/comments" , post: @post, comments: @comments %>
          </div>
            
          <!-- to hold like and comment buttons -->
          <div class="post-actions">
            <i class="fa fa-heart like-<%= @post.id %><%= 'active' if post_liked_by_user?(@post.id) %> fa-2x post-like" data-id="<%= @post.id %>"></i>
            <i class="fa fa-comment fa-2x post-comment" id="post-comment"></i>
          </div>
          <div class="holder">
            <p><strong id="post-<%= @post.id %>-likes"><%= @post.total_likes_count %>Likes</strong></p>
            <p class="text-muted"><%= time_ago_in_words @post.created_at %> ago</p>
          </div>
        </div>
          
        <!-- comment section field to post -->
        <!-- <div class="comment-box"> -->
            <%= form_for @comment do |f| %>
              <%= f.hidden_field :post_id, value: @post.id %>
              <!-- field only for show , return user back to post -->
              <%= f.hidden_field :return_to, value: "post" %>
              
              <!-- allow user to enter comment -->
              <!-- <div class="container-comment"> -->
                <div class="comment-here"><%= f.text_field :comment, placeholder:"Add comment here...", class:"form-control" %></div>
                <div class="post-comment"><%= f.submit "Post", class: "btn btn-primary btn-sm float-right" %></div>
              <!-- </div> -->
            
            <% end %>
        <!-- </div> -->
        </div>
      </div>
    </div>
</div>