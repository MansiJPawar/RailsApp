
<h1 style="margin: 100px;">Edit Password</h1>

<%= @account %>

<%= form_with model: Current.account, url: edit_password_path  do |form| %>
  <% if form.object.account.errors.any? %>
    <div class="alert alert-danger">
      <% form.object.account.errors.full_messages.each do |message| %>
      <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <%= form.password_field :password %>
  <%= form.password_field :password_confirmation %> 
  <%= form.submit "UPdate password" %>
<% end %>
