<!-- Main navigation -->
<header>  
    <!-- Full Page Intro -->
    <div class="view">
      <!-- Mask & flexbox options-->
      <div class="mask rgba-gradient d-flex justify-content-center align-items-center">
        <!-- Content -->
        <div class="container px-md-3 px-sm-0">
          <!--Grid row-->
          <div class="row wow fadeIn">
            <!--Grid column-->
            <div class="col-md-12 mb-4 white-text text-center wow fadeIn">
              <h3 class="display-3 mb-0 pt-md-5 pt-5 title">Instagram</h3>
              <hr class="hr-light my-4 w-75">
              <h4 class="subtext-header mt-2 mb-4">Grace is the beauty of form under the influence of freedom</h4>
              <p class="animate-character"> EXPLORE NOW ! </p>

              
              <% if current_account %>
              <p>
                <%= link_to "Sign Out", destroy_account_session_path, method: :delete, class:"btn btn-outline-light" %>
              </p>
              <% else %>    
              <p>
                <%= link_to 'SignUp', new_account_registration_path, class:"btn btn-outline-light" %>
                <%= link_to 'SignIn', new_account_session_path, class:"btn btn-outline-light" %>
              </p>  
              <% end %>
            
            </div>
            <!--Grid column-->
          </div>
          <!--Grid row-->
        </div>
        <!-- Content -->
      </div>
      <!-- Mask & flexbox options-->
    </div>
    <!-- Full Page Intro -->
  </header>
  <!-- Main navigation -->
