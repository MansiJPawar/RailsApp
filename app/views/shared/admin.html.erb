  <table id='userTable' class="table table-striped table-bordered table-hover text-white font-weight-bold">
    <thead class="text-dark"> 
      <tr>
        <th>Profile</th>
        <th>name</th>
        <th>email</th>
        <th>user</th>
        <th>Action</th> 
      </tr>
    </thead>
    <tbody class="text-dark">
     
      <% User.all.each do |user| %>
      <tr>
        <td class="image-user"><%= image_tag("/perfil.jpg") %></td>
        <td><%= user.name %></td>
        <td><%= user.email  %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Action', method: :post, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'block_user' , class:"text-dark"%></td>
      </tr>
      <% end %>

    </tbody>
  </table>
    <% end %><br>
    </div>
  </div>  
